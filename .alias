alias mpv='mpv --sub-auto=fuzzy'
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias please='sudo $(history -p \!\!)'
alias hist='eval $(history | fzf +s --tac | sed -r '\''s/ *[0-9]*\*? *//'\'' | sed -r '\''s/\\/\\\\/g'\'')'
alias prev='fzf --preview '\''cat {}'\'
alias mw='curl -s https://jezevec.eu/beer/mw'
alias op='curl -s https://jezevec.eu/beer/op'
alias craft='curl -s https://jezevec.eu/beer/craft'
alias asciicast2gif='docker run --rm -v $PWD:/data asciinema/asciicast2gif -S 2'

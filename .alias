alias mpv='mpv --sub-auto=fuzzy'
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias please='sudo $(history -p \!\!)'
alias hist='eval $(history | fzf +s --tac | sed -r '\''s/ *[0-9]*\*? *//'\'' | sed -r '\''s/\\/\\\\/g'\'')'
alias prev='fzf --preview '\''cat {}'\'
alias arbtt-today='arbtt-stats -f '\''$date >= '\''$(date -d "0 day ago" +%F)'\'' && $date <= '\''$(date -d "-1 days ago" +%F) --each-category'
alias arbtt-today-chart='arbtt-today --output-format=csv | arbtt-chart'
alias arbtt-yesterday='arbtt-stats -f '\''$date >= '\''$(date -d "1 day ago" +%F)'\'' && $date <= '\''$(date -d "0 days ago" +%F) --each-category'
alias arbtt-yesterday-chart='arbtt-yesterday --output-format=csv | arbtt-chart'
alias btc='curl -s https://www.bitstamp.net/api-internal/price-history/btceur/ | jq -r '\''.data["latest"]["price"] + " " + (.data["prices"]["hour"]["percent_change"]|tostring) + " " + (.data["prices"]["day"]["percent_change"]|tostring) + " " + (.data["prices"]["week"]["percent_change"]|tostring)'\'' | awk '\''//{printf("BTC: â‚¬%.2f | %+.2f%% (1h) | %+.2f%% (1d) | %+.2f%% (1w)\n", $1, $2, $3, $4)}'\'''
alias ssh-nocheck='ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'

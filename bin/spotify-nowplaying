#!/usr/bin/env python3

import dbus
from os import system

bus = dbus.SessionBus()
spotify = bus.get_object('org.mpris.MediaPlayer2.spotify', '/org/mpris/MediaPlayer2')
result = spotify.Get('org.mpris.MediaPlayer2.Player', 'Metadata', dbus_interface='org.freedesktop.DBus.Properties')

artist = result['xesam:artist'][0]
album = result['xesam:album']
title = result['xesam:title']

np = '/me np: %s - %s [%s]' % (artist, title, album, )
system('echo -n "' + np + '" | xclip')
